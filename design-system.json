{
  "project": {
    "name": "Game-Style TODO Service",
    "description": "TODO-сервис в стиле игровых достижений, вдохновлённый Bruno Simon и cyber-grunge эстетикой",
    "references": [
      "https://bruno-simon.com",
      "Achievement notification UI pattern"
    ]
  },
  "design_code_dna": {
    "art_style_engine": {
      "global_medium": "3D-Styled Web UI with Game Elements",
      "visual_aesthetic": "Cyber-Grunge Achievement System / Dark Game UI",
      "mood": "Дерзкий, игровой, мотивирующий — каждая выполненная задача = достижение в игре",
      "inspiration": "GTA-style achievement popups + Bruno Simon's playful 3D world"
    },
    "color_system": {
      "background": {
        "primary": "#0D0D0F",
        "secondary": "#121216",
        "tertiary": "#1A1A1F",
        "description": "Deep obsidian black — как тёмный игровой интерфейс"
      },
      "accent": {
        "primary": "#D9FF70",
        "primary_glow": "rgba(217, 255, 112, 0.4)",
        "secondary": "#FF6B35",
        "tertiary": "#7B68EE",
        "description": "Acid Lime как главный акцент (выполненные задачи), оранжевый для срочных, фиолетовый для категорий"
      },
      "text": {
        "primary": "#FFFFFF",
        "secondary": "#E0E0E0",
        "muted": "#888888",
        "on_accent": "#0D0D0F"
      },
      "semantic": {
        "success": "#D9FF70",
        "warning": "#FFB84D",
        "danger": "#FF4757",
        "info": "#7B68EE"
      },
      "gradients": {
        "floor_glow": "linear-gradient(180deg, transparent 0%, rgba(255, 107, 53, 0.15) 100%)",
        "card_shine": "linear-gradient(135deg, rgba(255,255,255,0.03) 0%, transparent 50%)"
      }
    },
    "typography_dna": {
      "font_stack": {
        "display": "'Amatic SC', 'Permanent Marker', cursive",
        "body": "'Nunito', 'Inter', sans-serif",
        "mono": "'JetBrains Mono', monospace"
      },
      "display_style": {
        "weight": "700",
        "transform": "uppercase",
        "letter_spacing": "0.05em",
        "effect": "text-shadow: 0 0 20px var(--accent-glow)",
        "description": "Рукописный гранжевый стиль для заголовков задач — как в скриншоте"
      },
      "body_style": {
        "weight": "400-600",
        "line_height": "1.5",
        "description": "Чистый читаемый шрифт для описаний задач"
      },
      "sizes": {
        "task_title": "clamp(1.25rem, 3vw, 1.75rem)",
        "task_description": "0.875rem",
        "counter": "1rem",
        "category_label": "0.75rem"
      }
    },
    "component_system": {
      "task_card": {
        "description": "Каждая задача = игровое достижение",
        "background": "#121216",
        "border_radius": "0px",
        "border": "none",
        "accent_bar": {
          "position": "top-right corner",
          "color": "var(--accent-primary)",
          "width": "60px",
          "height": "3px"
        },
        "shadow": "0 4px 24px rgba(0, 0, 0, 0.5)",
        "hover_effect": "transform: translateY(-2px); box-shadow: 0 0 30px rgba(217, 255, 112, 0.1)",
        "completed_state": {
          "accent_bar_color": "#D9FF70",
          "title_glow": true,
          "checkmark_animation": "scale-bounce"
        }
      },
      "progress_counter": {
        "description": "Счётчик в стиле 1/1, 3/5 как в играх",
        "format": "completed/total",
        "icon": "✓ (checkmark)",
        "position": "top-right of card",
        "color": "#D9FF70"
      },
      "category_tags": {
        "style": "pill-shaped или sharp rectangles",
        "colors": {
          "work": "#7B68EE",
          "personal": "#FF6B35", 
          "urgent": "#FF4757",
          "fun": "#D9FF70"
        }
      },
      "buttons": {
        "primary": {
          "background": "#D9FF70",
          "color": "#0D0D0F",
          "border_radius": "0px",
          "font": "display",
          "transform": "uppercase",
          "hover": "box-shadow: 0 0 25px rgba(217, 255, 112, 0.5)"
        },
        "secondary": {
          "background": "transparent",
          "border": "2px solid #D9FF70",
          "color": "#D9FF70"
        }
      }
    },
    "effects_and_animations": {
      "glow_system": {
        "accent_glow": "0 0 20px rgba(217, 255, 112, 0.4)",
        "text_glow": "0 0 10px rgba(217, 255, 112, 0.6)",
        "card_completion_glow": "0 0 40px rgba(217, 255, 112, 0.3)"
      },
      "micro_interactions": {
        "task_complete": {
          "animation": "checkmark scales in with bounce, accent bar fills, brief glow pulse",
          "duration": "400ms",
          "easing": "cubic-bezier(0.34, 1.56, 0.64, 1)"
        },
        "task_add": {
          "animation": "slide-in from bottom with fade",
          "duration": "300ms"
        },
        "hover_lift": {
          "transform": "translateY(-2px)",
          "transition": "150ms ease-out"
        }
      },
      "background_effects": {
        "ambient_glow": "Subtle orange/warm gradient at bottom (как на скриншоте)",
        "noise_texture": "Subtle digital grain overlay at 3% opacity",
        "grid_pattern": "Optional isometric grid pattern (Bruno Simon style)"
      }
    },
    "layout_system": {
      "container_max_width": "800px",
      "spacing_scale": {
        "xs": "4px",
        "sm": "8px",
        "md": "16px",
        "lg": "24px",
        "xl": "32px",
        "xxl": "48px"
      },
      "task_list": {
        "gap": "16px",
        "layout": "vertical stack"
      },
      "header": {
        "style": "Minimal, dark, with glowing accent elements",
        "stats_display": "Игровая статистика: всего задач, выполнено сегодня, streak"
      }
    },
    "gamification_elements": {
      "achievements": {
        "description": "Система достижений за выполнение задач",
        "examples": [
          "First Task — выполни первую задачу",
          "On Fire — 5 задач подряд",
          "Early Bird — задача до 9 утра",
          "Night Owl — задача после полуночи",
          "Streak Master — 7 дней подряд"
        ],
        "notification_style": "Toast popup как на скриншоте"
      },
      "progress_bar": {
        "style": "Неоновая полоса прогресса дня",
        "glow": true
      },
      "level_system": {
        "xp_per_task": 10,
        "display": "Level badge рядом с именем"
      }
    },
    "sound_design_hints": {
      "task_complete": "Satisfying 'ding' or game achievement sound",
      "button_click": "Subtle UI click",
      "achievement_unlock": "Triumphant short jingle"
    }
  },
  "css_variables_export": {
    "--bg-primary": "#0D0D0F",
    "--bg-secondary": "#121216",
    "--bg-tertiary": "#1A1A1F",
    "--accent-primary": "#D9FF70",
    "--accent-glow": "rgba(217, 255, 112, 0.4)",
    "--accent-secondary": "#FF6B35",
    "--accent-tertiary": "#7B68EE",
    "--text-primary": "#FFFFFF",
    "--text-secondary": "#E0E0E0",
    "--text-muted": "#888888",
    "--success": "#D9FF70",
    "--warning": "#FFB84D",
    "--danger": "#FF4757",
    "--font-display": "'Amatic SC', cursive",
    "--font-body": "'Nunito', sans-serif",
    "--radius-none": "0px",
    "--radius-sm": "4px",
    "--shadow-card": "0 4px 24px rgba(0, 0, 0, 0.5)",
    "--glow-accent": "0 0 20px rgba(217, 255, 112, 0.4)"
  }
}
